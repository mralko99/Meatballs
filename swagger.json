  "schemes" : [ "http" ],
  "paths" : {
    "/apimeatballs/getrecipe/{sub_name}" : {
      "get" : {
        "summary" : "returns a recipe including the parameter 'sub_name'in the meal name",
        "produces" : [ "application/json" ],
        "parameters" : [ {
          "name" : "sub_name",
          "in" : "path",
          "description" : "sub name of recipe",
          "required" : true,
          "type" : "string"
        },{
          "name" : "max_calories",
          "in" : "query",
          "descritpiton" : "max number of calories",
          "required" : true,
          "type" : "int"
        },{
          "name" : "exculded_ingredients",
          "in" : "query",
          "descritpiton" : "ingredeints to exlude, e.g. for intollerances, preferences etc..",
          "required" : false,
          "type" : "string, value separated by '-' "
        } ],
        "responses" : {
          "200" : {
            "description": "No error, success!!!",
            "schema": {
              "type": "json"
            }
          },
          "400" : {
            "description" : "Bad Request"
          },
          "500" : {
            "description" : "Error in External API query"
          }
        }
      }
    },
    "/apimeatballs/nutritionalvalues" : {
      "get" : {
        "summary" : "takes a product and return nutritional values ",
        "produces" : [ "application/json" ],
        "parameters" : [ {
          "name" : "ingredient",
          "in" : "query",
          "description" : "view nutritional values of this ingredient",
          "required" : true,
          "type" : "string"
        } ],
        "responses" : {
          "200" : {
            "description": "No error, success",
            "schema": {
              "type": "json"
            }
          },
          "400" : {
            "description" : "Bad Request"
          },
          "500" : {
            "description" : "Error in External API query"
          }
        }
      }
    },
    "/apimeatballs/shoppinglist/:product_type" : {
      "get" : {
        "summary" : "Return a series of produtcs with you can by in a grocery store",
        "produces" : [ "application/json" ],
        "parameters" : [ {
          "name" : "max_calories",
          "in" : "query",
          "description" : "max amount of calories",
          "required" : true,
          "type" : "int"
        },
        {
          "name" : "max_fat",
          "in" : "query",
          "description" : "max amount of fat",
          "required" : false,
          "type" : "int"
          }],
        "responses" : {
          "200" : {
            "description": "No error, success",
            "schema": {
              "type": "string"
            }
          },
          "400" : {
            "description" : "Bad Request"
          },
          "500" : {
            "description" : "Error in External API query"
          }
        }
      }
    }
